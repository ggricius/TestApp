<% if signed_in? %>
 <p>Add a review:</p>
 <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
   <p>
     <%= f.label :body, "Comments" %><br>
     <%= f.text_area :body, class:'form-control' %>
   </p>
   <p>
     <div class="rating"></div>
   </p>
   <p>
     <%= f.submit "Submit", class:'btn btn-success' %>
   </p>
 <% end %>
<% end %>
