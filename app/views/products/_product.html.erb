<div class="col-sm-6 col-md-4">
	<div class="thumbnail">
    <div class="product_image">
    <%= image_tag(product.image_url, class: "img-responsive")  %>
    </div>
     	<div class="caption">
     		<h4><%= product.name %></h4>
    		<h5><%= product.colour %></h5>
        <h6><%= product.description %></h6>
    		<h6><%= product.price %></h6>
        <button class="btn btn-primary btn-colour-change"><%= link_to 'Show', product %></button>
    		<button class="btn btn-primary btn-colour-change"><%= link_to 'Edit', edit_product_path(product) %></button>
    		<button class="btn btn-primary btn-colour-change"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      	</div>
    </div>
</div>
